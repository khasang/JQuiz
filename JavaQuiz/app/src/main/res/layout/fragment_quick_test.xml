<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".View.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/settings_label_completed"
        android:id="@+id/textViewQuickTestCompleted"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchQuickTestCompleted"
        android:layout_alignTop="@id/textViewQuickTestCompleted"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/settings_label_count"
        android:id="@+id/textViewQuickTestCount"
        android:layout_marginTop="32dp"
        android:layout_below="@id/switchQuickTestCompleted"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarQuickTest"
        android:layout_alignTop="@id/textViewQuickTestCount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/textViewQuickTestCount"
        android:layout_toEndOf="@id/textViewQuickTestCount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/settings_label_language"
        android:id="@+id/textViewQuickTestLanguage"
        android:layout_marginTop="26dp"
        android:layout_below="@id/seekBarQuickTest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerQuickTest"
        android:spinnerMode="dropdown"
        android:entries="@array/difficulty_arrays"
        android:prompt="@string/settings_language__prompt"
        android:layout_alignTop="@id/textViewQuickTestLanguage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/textViewQuickTestLanguage"
        android:layout_toEndOf="@id/textViewQuickTestLanguage" />


</RelativeLayout>